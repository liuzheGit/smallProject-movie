/**app.wxss**/
page {
  height: 100%;
  background: #f7f7f7;
  font-size: 32rpx;
}

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.search-movie {
  display: flex;
  position: fixed;
  top: 0;
  z-index: 1;
  width: 100%;
  box-shadow: 0 5rpx 5rpx #eee;
  padding: 20rpx 30rpx;
  align-items: center;
  background: #fff;
  border-width: 1rpx 0;
  border-style: solid;
  border-color: #e9e9e9;
  /* margin-bottom: 30rpx; */
}
.search-icon {
  margin-right: 30rpx;
}
.search-placeholder {
  color: #d9d9d9;
}