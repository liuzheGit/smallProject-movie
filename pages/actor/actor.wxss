/* pages/actor/actor.wxss */
@import '/pages/rating-star/rating-star';

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.actor-header {
  width: 100%;
  padding: 20rpx 0;
  background: #eee;
  text-align: center;
}

.actor-header .header-poster {
  width: 300rpx;
  height: 450rpx;
}

.actor-content {
  padding: 40rpx 40rpx;
}

.actor-info {
  padding: 20rpx 0;
  position: relative;
}

.actor-info .info-text {
  display: flex;
  flex-direction: column;
}

.actor-info .info-text .info-title {
  font-size: 42rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.actor-info .info-text .info-des {
  font-size: 30rpx;
  color: gray;
}

.detail-desc {
  padding: 20rpx 0;
}

.desc-title {
  font-size: 32rpx;
  color: gray;
  font-weight: 600;
}
.desc-content {
  /* text-indent: 56rpx; */
  font-size: 28rpx;
  color: gray;

}

.fold-close {
  height: 112rpx;
  overflow: hidden;
}

.fold-open {
  height: auto;
}

.actor-desc .fold {
  color: green;
  font-size: 28rpx;
}

.actor-img {
  width: 100%;
  margin: 20rpx 0;
}

.actor-scroll {
  white-space: nowrap;
  width: 100%;
}

.actor-box {
  display: inline-block;
  width: 270rpx;
  height: 260rpx;
  margin-right: 5rpx;
  text-align: center;
}

.actor-image {
  width: 270rpx;
  height: 260rpx;
}

.actor-works {
  width: 100%;
  padding: 0 0 20rpx 0;
}

.work-box {
  display: inline-block;
  width: 200rpx;
  margin-right: 5rpx;
  text-align: center;
  vertical-align: top;
}

.work-image {
  width: 200rpx;
  height: 280rpx;
}

.work-name {
  font-size: 28rpx;
  color: gray;
  text-align: center;
  white-space: normal;
}