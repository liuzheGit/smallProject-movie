/* pages/home/index.wxss */
 @import "/pages/movie-grid/movie-grid";
 
.first-session-page {
  margin-top: 100rpx;
}

.session-page {
  background: #fff;
  border-width: 1rpx 0;
  border-style: solid;
  border-color: #e9e9e9;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.session-header {
  display: flex;
  padding: 0 30rpx 20rpx 30rpx;
  align-items: center;
}

.header-title {
  color: #4a4a4a;
  flex: 1;
  font-weight: 500;
  font-size: 36rpx;
}

.header-more {
  color: #32dd32;
}

.session-content {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  white-space: nowrap;
}

.movie-scroll {
  white-space: nowrap;
  width: 100%;
}