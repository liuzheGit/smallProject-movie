/* pages/more/more.wxss */
@import "/pages/movie-list/movie-list";

.container {
  width: 100%;
}
.tab {
  display: flex;
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  align-items: center;
  border-width: 2rpx 0;
  border-style: solid;
  border-color: #e9e9e9;
  z-index: 1
}
.tab-name {
  flex: 1;
  font-size: 32rpx;
  text-align: center;
  font-weight: 600;
  height: 84rpx;
  line-height: 84rpx;
}
.tab-normal {
  color: gray;
}
.tab-select {
  color: black;
  border-bottom: 4rpx solid limegreen;
}

.session-movie {
  margin-top: 92rpx;
  background: #fff;
}

.scroll-movie {
  height: 100vh;
}